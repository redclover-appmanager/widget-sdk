{
  "name": "@koru/widget-sdk",
  "version": "1.0.0",
  "description": "Lightweight SDK for building Koru widgets with TypeScript support, smart caching, and lifecycle management",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-redclover:redclover-appmanager/widget-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/redclover-appmanager/widget-sdk/issues"
  },
  "homepage": "https://github.com/redclover-appmanager/widget-sdk#readme",
  "keywords": [
    "widget",
    "sdk",
    "koru",
    "typescript",
    "javascript",
    "frontend",
    "ui",
    "component",
    "embed",
    "integration"
  ],
  "author": {
    "name": "Red Clover",
    "email": "soporte@redclover.com.ar"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
